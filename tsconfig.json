{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "src/types",
      "server/node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["server/node_modules", "src/**/*.test.ts", "src/__tests__/**/*", "src/tests/**/*", "src/config/storage.config.ts", "src/routes/product-import.routes.ts", "src/routes/vendor-metrics.routes.ts", "src/types/file.type.ts"]
}
